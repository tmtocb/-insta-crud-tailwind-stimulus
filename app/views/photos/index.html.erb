<div class="max-w-6xl m-auto">
  <div class="flex items-center justify-between pb-4 mb-4 border-b">
    <h1 class="text-xl font-bold mb-0 uppercase text-gray-500">Photos</h1>
    <%= link_to "New Photo", new_photo_path, class: "btn btn-default" if user_signed_in? %>
  </div>

  <div class="flex flex-wrap items-center justify-between">
  <% @photos.each do |photo| %>
    <article class="border rounded-lg lg:w-1/3 w-full">
      <%= link_to photo do %>
        <%#= image_path %> Image goes here
      <% end %>
    <div class="p-6">
        <div class="leading-normal text-lg">
          <%= link_to photo.description, photo %>
        </div>

        <% if user_signed_in? && current_user.id == photo.user_id %>
          <div class="my-4">
            <%= link_to 'Edit', edit_photo_path(photo), class: "btn btn-default" %>
            <%= link_to 'Delete', photo, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
          </div>
        <% end %>
      </div>
    </article>
    <% end %>
  </div>
</div>